<Window x:Class="Compression_Year_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compression_Year_Project"
        mc:Ignorable="d"
        Title="The Compression Project" Height="400" Width="600">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenFile_Click"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True"/>
        <Canvas Height="347" VerticalAlignment="Top" Width="587" AllowDrop="True" PreviewDrop="Canvas_PreviewDrop"
                PreviewDragOver="Canvas_PreviewDragOver"
                PreviewDragEnter="Canvas_PreviewDragOver">
            <Button Content="Compress" Width="212" Height="56"/>
            <Button Content="Extract" Canvas.Left="212" Width="189" Height="56"/>
            <Button Content="Show Results" Canvas.Left="401" Width="185" Height="56"/>
            <TextBlock FontSize="14" Name="txtMain"  TextWrapping="Wrap" Canvas.Top="56" Height="291" Width="586"/>
        </Canvas>
    </DockPanel>


</Window>
